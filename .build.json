{
  "log": {
    "enabled": false,
    "debug": false,
    "console": true
  },
  "profiles": {
    "serve": ["serve"],
    "production": ["clean", "compile", "lint"],
    "development": ["serve", "watch", "compile"]
  },
  "clean": {
    "locations": ["dist/*", "types/*", "typedoc/*"]
  },
  "lint": {
    "locations": [ "src/**/*.ts" ],
    "rules": { }
  },
  "watch": {
    "locations": [ "src/**/*" ]
  },
  "serve": {
    "sslKey": "node_modules/@vladmandic/build/cert/https.key",
    "sslCrt": "node_modules/@vladmandic/build/cert/https.crt",
    "httpPort": 8000,
    "httpsPort": 8001,
    "documentRoot": ".",
    "defaultFolder": "src",
    "defaultFile": "precalc.html"
  },
  "build": {
    "global": {
      "target": "esnext",
      "sourcemap": true,
      "treeShaking": true,
      "ignoreAnnotations": false,
      "minify": false,
      "banner": { "js": "/*\n  Human: Motion Analytics Demo\n  author: <https://github.com/vladmandic>'\n*/\n" }
    },
    "targets": [
      {
        "format": "esm",
        "platform": "browser",
        "name": "index",
        "input": "src/index.ts",
        "output": "dist/index.js"
      },
      {
        "format": "esm",
        "platform": "browser",
        "name": "worker",
        "input": "src/worker.ts",
        "output": "dist/worker.js"
      }
   ]
  }
}
